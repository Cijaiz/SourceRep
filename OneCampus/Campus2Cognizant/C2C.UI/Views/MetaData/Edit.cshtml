@model C2C.UI.ViewModels.MetaValueViewModel

@{
    Layout = "~/Views/Shared/_NavLayout.cshtml";
}

@if (Model != null && Model.MetaMasterId > 0)
{
    <h2>Edit Meta Value for - @Model.MetaMasterKeyReference </h2>

    <section id="edit-blog">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)

            @Html.HiddenFor(model => model.Id)
            <div class="editor-label">
                @Html.HiddenFor(model => model.MetaMasterId)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.MetaMasterKeyReference)
            </div>
            <div class="editor-field">
                @Html.Label(Model.MetaMasterKeyReference)
                @Html.ValidationMessageFor(model => model.MetaMasterKeyReference)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Value)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Value)
                @Html.ValidationMessageFor(model => model.Value)
            </div>

            <p>
                <input type="submit" value="Save" />
            </p>
        }

        <div>
            @Html.ActionLink("Back to MetaValue List", "List", new { id = Model.MetaMasterId })
        </div>
    </section>
}
else
{
    <p>No data found</p>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
