@model C2C.BusinessEntities.C2CEntities.Group

@{
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_NavLayout.cshtml";
}
<section id="edit-blog">
    <div class="editor">
        <h2>Create</h2>

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)

            <fieldset>
                <legend>Group</legend>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Title)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.IsCollege)
                </div>
                <div class="editor-field">
                    @Html.CheckBoxFor(model => model.IsCollege, new { @style = "display:block" })
                </div>

                <p>
                    <input type="submit" value="Create" />
                    <input class="cancelbtn" type="button" value="Cancel" onclick="window.location.href = '/Group/Index'" />
                </p>
            </fieldset>
            
        }

    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/C2C/c2c_group.js"></script>
}