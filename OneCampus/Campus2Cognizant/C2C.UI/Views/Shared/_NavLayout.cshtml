<section class="body-content">
    <div class="cont-wrapper ">
        @RenderBody()
    </div>
</section>

@section scripts{
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/C2C/c2c_home.js"></script>
    <script type="text/javascript">
        $(".menu-navigation").click(function () {
            var ref = $(this).children('span').children('a').attr('href');
            window.location = ref;
        });
    </script>
}

