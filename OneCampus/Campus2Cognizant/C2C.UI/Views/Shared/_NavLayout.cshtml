        <div class="menu-items menu-navigation" id="mitems">
            <img src="~/Content/Themes/base/images/home_T.png">
            <span class="menu-head home-menu"><a href="@Url.Action("Index", "Home")" class="home-menu">Home</a></span>
        </div>

        <div class="menu-item">
            <a href="http://campus2cognizant.blob.core.windows.net/learning-and-development/index.html" target="_blank">
